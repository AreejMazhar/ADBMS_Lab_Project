<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Adopters - Pet Shelter Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <%- include('partials/header') %>

    <% if (error) { %>
    <div class="modal fade" id="errorModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Deletion Blocked</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p><%= error %></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <div class="container mt-4">
        <h1 class="mb-3">Adopters</h1>

        <!-- EXPORT + ADD BUTTON ROW -->
        <div class="export-add-row">
            <a href="/adopters/add" class="btn btn-primary mb-0">Add New Adopter</a>

            <div class="export-print">
                <button class="btn btn-secondary btn-sm" id="exportCsvBtn">
                    Export CSV
                </button>
                <button class="btn btn-secondary btn-sm" id="printBtn">
                    Print
                </button>
            </div>
        </div>

        <!-- SEARCH + FILTER CARD -->
        <div class="search-filter-card">
            <div class="search-bar">
                <input type="text" id="globalSearch" placeholder="Search by ID, Name, Phone, Email, Notes..." class="form-control">
            </div>

            <div class="filters-row">
                <span><strong>Filters:</strong></span>
                <select id="filterPets" class="form-select form-select-sm">
                    <option value="">All Pets</option>
                    <option value="0">0 Pets</option>
                    <option value="1">1 Pet</option>
                    <option value="2">2+ Pets</option>
                </select>

                <select id="filterEmail" class="form-select form-select-sm">
                    <option value="">All Emails</option>
                    <option value="has">Has Email</option>
                    <option value="no">No Email</option>
                </select>

                <input type="text" id="filterNotes" class="form-control form-control-sm" placeholder="Notes contains...">
            </div>

            <div class="filters-actions">
                <button id="clearFiltersBtn" class="btn btn-outline-secondary btn-sm">
                    Clear Filters
                </button>
            </div>

        </div>

        <!-- TABLE -->
        <div class="table-container">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Adopted Pets</th>
                        <th>Notes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% adopters.forEach(adopter => { %>
                    <tr>
                        <td><%= adopter.adopter_id %></td>
                        <td><%= adopter.name %></td>
                        <td><%= adopter.phone %></td>
                        <td><%= adopter.email || "-" %></td>
                        <td><%= adopter.adopted_pet_count || 0 %></td>
                        <td><%= adopter.notes || "-" %></td>
                        <td>
                            <div class="d-flex gap-1">
                                <a href="/adopters/edit/<%= adopter._id %>" class="btn btn-edit btn-sm">Edit</a>
                                <button type="button" class="btn btn-delete btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-formid="<%= adopter._id %>">Delete</button>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Confirm Delete Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this adopter?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="POST">
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
    window.addEventListener('DOMContentLoaded', () => {
        // Error modal
        const errorModalEl = document.getElementById('errorModal');
        if (errorModalEl) new bootstrap.Modal(errorModalEl).show();

        // Delete modal
        const deleteModal = document.getElementById('confirmDeleteModal');
        deleteModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const formId = button.getAttribute('data-formid');
            document.getElementById('deleteForm').action = `/adopters/delete/${formId}`;
        });

        const globalSearch = document.getElementById('globalSearch');
        const filterPets = document.getElementById('filterPets');
        const filterEmail = document.getElementById('filterEmail');
        const filterNotes = document.getElementById('filterNotes');
        const rows = document.querySelectorAll('.table tbody tr');

        function applyFilters() {
            const query = globalSearch.value.toLowerCase();
            rows.forEach(row => {
                const id = row.cells[0].textContent.toLowerCase();
                const name = row.cells[1].textContent.toLowerCase();
                const phone = row.cells[2].textContent.toLowerCase();
                const email = row.cells[3].textContent.toLowerCase();
                const notes = row.cells[5].textContent.toLowerCase();
                const petCount = parseInt(row.cells[4].textContent);
                let visible = true;

                visible = visible && (id.includes(query) || name.includes(query) || phone.includes(query) || email.includes(query) || notes.includes(query));

                if (filterPets.value) {
                    visible = visible && (filterPets.value === "2" ? petCount >= 2 : petCount === parseInt(filterPets.value));
                }

                if (filterEmail.value) {
                    visible = visible && ((filterEmail.value === "has" && email !== "-") || (filterEmail.value === "no" && email === "-"));
                }

                if (filterNotes.value) {
                    visible = visible && notes.includes(filterNotes.value.toLowerCase());
                }

                row.style.display = visible ? "" : "none";
            });
        }

        [globalSearch, filterPets, filterEmail, filterNotes].forEach(el => {
            el.addEventListener('input', applyFilters);
            el.addEventListener('change', applyFilters);
        });

        // Export CSV
        document.getElementById('exportCsvBtn').addEventListener('click', () => {
            let csv = [];
            const visibleRows = Array.from(rows).filter(r => r.style.display !== 'none');
            visibleRows.forEach(row => {
                const rowData = Array.from(row.cells).map(td => `"${td.textContent}"`);
                csv.push(rowData.join(','));
            });
            const csvFile = new Blob([csv.join('\n')], {type: 'text/csv'});
            const a = document.createElement('a');
            a.href = URL.createObjectURL(csvFile);
            a.download = 'adopters.csv';
            a.click();
        });

        // Print table
        document.getElementById('printBtn').addEventListener('click', () => window.print());

        // Clear Filters
        document.getElementById('clearFiltersBtn').addEventListener('click', () => {
            globalSearch.value = '';
            filterPets.value = '';
            filterEmail.value = '';
            filterNotes.value = '';

            applyFilters();
        });
    });
    </script>

</body>
</html>
