<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Adopters - Pet Shelter Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <h1>Adopters</h1>
        <div class="mb-3">
            <a href="/adopters/add" class="btn btn-success">Add New Adopter</a>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Adopted Pets</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% adopters.forEach(adopter => { %>
                <tr>
                    <td><%= adopter.adopter_id %></td>
                    <td><%= adopter.name %></td>
                    <td><%= adopter.contact || "-" %></td>
                    <td><%= adopter.adopted_pet_count || 0 %></td>
                    <td><%= adopter.notes || "-" %></td>
                    <td>
                        <a href="/adopters/edit/<%= adopter._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/adopters/delete/<%= adopter._id %>" method="POST" style="display:inline-block;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
