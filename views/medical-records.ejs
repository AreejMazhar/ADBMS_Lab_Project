<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Medical Records - Pet Shelter Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <%- include('partials/header') %>

    <% if (error) { %>
    <div class="modal fade" id="errorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Action Blocked</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body"><p><%= error %></p></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <div class="container mt-4">
        <h1 class="mb-3">Medical Records</h1>

        <!-- Top Buttons -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/medicalrecords/add" class="btn btn-primary">Add Medical Record</a>
            <div class="d-flex gap-2">
                <button class="btn btn-secondary" id="exportCsvBtn">Export CSV</button>
                <button class="btn btn-secondary" id="printBtn">Print</button>
            </div>
        </div>

        <!-- Search & Filters -->
        <div class="search-filter-card mb-3 p-3 border rounded bg-white shadow-sm">
            <div class="search-bar">
                <input type="text" id="globalSearch" class="form-control mb-2"
                    placeholder="Search by Record ID, Pet, Type, Notes...">
            </div>

            <div class="filters-row mb-2">
                <span><strong>Filters:</strong></span>
                <select id="filterType" class="form-select form-select-sm">
                    <option value="">All Types</option>
                    <option value="Vaccination">Vaccination</option>
                    <option value="Check-up">Check-up</option>
                    <option value="Other">Other</option>
                </select>
                <div class="date-range-filter">
                    <input type="date" id="filterDateFrom" class="form-control form-control-sm">
                    <span class="date-separator">to</span>
                    <input type="date" id="filterDateTo" class="form-control form-control-sm">
                </div>
            </div>

            <div class="filters-actions text-end">
                <button id="clearFiltersBtn" class="btn btn-outline-secondary btn-sm">Clear Filters</button>
            </div>
        </div>

        <!-- Table -->
        <div class="table-container">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Record ID</th>
                        <th>Pet</th>
                        <th>Type</th>
                        <th>Vaccination</th>
                        <th>Diagnosis</th>
                        <th>Treatment</th>
                        <th>Notes</th>
                        <th>Created On</th>
                        <th>Updated On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                <% records.forEach(r => { %>
                    <tr>
                        <td><%= r.record_id %></td>
                        <td><%= r.pet_name %></td>
                        <td><%= r.type %></td>
                        <td><%= r.type === 'Vaccination' ? r.vaccination_name || '-' : '-' %></td>
                        <td><%= r.type === 'Check-up' ? r.diagnosis || '-' : '-' %></td>
                        <td><%= r.treatment || '-' %></td>
                        <td><%= r.notes || '-' %></td>
                        <td><%= r.createdAt ? r.createdAt.toLocaleDateString() : "-" %></td>
                        <td><%= r.updatedAt ? r.updatedAt.toLocaleDateString() : "-" %></td>
                        <td>
                            <div class="d-flex gap-1">
                                <a href="/medicalrecords/edit/<%= r._id %>" class="btn btn-edit btn-sm">Edit</a>
                                <button type="button" class="btn btn-delete btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#confirmDeleteModal"
                                    data-id="<%= r._id %>">
                                    Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">Are you sure you want to delete this medical record?</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="POST">
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
    window.addEventListener('DOMContentLoaded', () => {

        // Error modal
        const errorModal = document.getElementById('errorModal');
        if (errorModal) new bootstrap.Modal(errorModal).show();

        // Delete modal
        const deleteModal = document.getElementById('confirmDeleteModal');
        deleteModal.addEventListener('show.bs.modal', e => {
            const id = e.relatedTarget.getAttribute('data-id');
            document.getElementById('deleteForm').action = `/medicalrecords/delete/${id}`;
        });

        // Filtering
        const rows = document.querySelectorAll('tbody tr');
        const globalSearch = document.getElementById('globalSearch');
        const filterType = document.getElementById('filterType');
        const filterDateFrom = document.getElementById('filterDateFrom');
        const filterDateTo = document.getElementById('filterDateTo');

        function applyFilters() {
            rows.forEach(row => {
                const id = row.cells[0].textContent.toLowerCase();
                const pet = row.cells[1].textContent.toLowerCase();
                const type = row.cells[2].textContent.toLowerCase();
                const notes = row.cells[5].textContent.toLowerCase();
                const dateCell = row.cells[0].textContent; // optional if you store date in another cell

                let visible = true;
                const q = globalSearch.value.toLowerCase();

                visible = visible && (id.includes(q) || pet.includes(q) || type.includes(q) || notes.includes(q));

                if (filterPet.value) visible = visible && pet.includes(filterPet.value.toLowerCase());
                if (filterType.value) visible = visible && type === filterType.value.toLowerCase();

                if (filterDateFrom.value || filterDateTo.value) {
                    const rowDate = new Date(dateCell); // adjust if you store actual date
                    const fromDate = filterDateFrom.value ? new Date(filterDateFrom.value) : null;
                    const toDate = filterDateTo.value ? new Date(filterDateTo.value) : null;

                    if (fromDate && rowDate < fromDate) visible = false;
                    if (toDate && rowDate > toDate) visible = false;
                }

                row.style.display = visible ? "" : "none";
            });
        }

        [globalSearch, filterType, filterDateFrom, filterDateTo].forEach(el => {
            el.addEventListener('input', applyFilters);
            el.addEventListener('change', applyFilters);
        });

        document.getElementById('clearFiltersBtn').addEventListener('click', () => {
            [globalSearch, filterPet, filterType, filterDateFrom, filterDateTo].forEach(el => el.value = '');
            applyFilters();
        });

        // Export CSV
        document.getElementById('exportCsvBtn').addEventListener('click', () => {
            const csv = [];
            rows.forEach(r => {
                if (r.style.display !== 'none') {
                    csv.push([...r.cells].map(c => `"${c.textContent}"`).join(','));
                }
            });
            const blob = new Blob([csv.join('\n')], { type: 'text/csv' });
            const a = document.createElement('a');
            a.href = URL.createObjectURL(blob);
            a.download = 'medical_records.csv';
            a.click();
        });

        // Print
        document.getElementById('printBtn').addEventListener('click', () => window.print());

    });
    </script>
</body>
</html>
