<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Medical Records - Pet Shelter Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <%- include('partials/header') %>

    <script>
        const INITIAL_PET_ID = "<%= selectedPetId || '' %>";
    </script>

    <% if (error) { %>
    <div class="modal fade" id="errorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Action Blocked</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body"><p><%= error %></p></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <div class="container mt-4">
        <h1 class="mb-3">Medical Records</h1>

        <!-- Top Buttons -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/medicalrecords/add" class="btn btn-primary">Add Medical Record</a>
            <div class="d-flex gap-2">
                <button class="btn btn-secondary" id="exportCsvBtn">Export CSV</button>
                <button class="btn btn-secondary" id="printBtn">Print</button>
            </div>
        </div>

        <!-- Search & Filters -->
        <div class="search-filter-card mb-3 p-3 border rounded bg-white shadow-sm">
            <div class="search-bar">
                <input type="text" id="globalSearch" class="form-control mb-2"
                    placeholder="Search by Record ID, Pet, Type, Notes...">
            </div>

            <div class="filters-row mb-2">
                <span><strong>Filters:</strong></span>
                <select id="filterType" class="form-select form-select-sm">
                    <option value="">All Types</option>
                    <option value="Vaccination">Vaccination</option>
                    <option value="Check-up">Check-up</option>
                    <option value="Other">Other</option>
                </select>

                <select id="sortDate" class="form-select form-select-sm">
                    <option value="">Select</option>
                    <option value="created-new">Created: Newest → Oldest</option>
                    <option value="created-old">Created: Oldest → Newest</option>
                    <option value="updated-new">Updated: Newest → Oldest</option>
                    <option value="updated-old">Updated: Oldest → Newest</option>
                </select>

                <div class="date-range-filter">
                    <label class="small fw-semibold">Created</label>
                    <input type="date" id="createdFrom" class="form-control form-control-sm">
                    <span class="date-separator">to</span>
                    <input type="date" id="createdTo" class="form-control form-control-sm">
                </div>

                <div class="date-range-filter">
                    <label class="small fw-semibold">Updated</label>
                    <input type="date" id="updatedFrom" class="form-control form-control-sm">
                    <span class="date-separator">to</span>
                    <input type="date" id="updatedTo" class="form-control form-control-sm">
                </div>
            </div>

            <div class="filters-actions text-end">
                <button id="clearFiltersBtn" class="btn btn-outline-secondary btn-sm">Clear Filters</button>
            </div>
        </div>

        <!-- Table -->
        <div class="table-container">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Record ID</th>
                        <th>Pet</th>
                        <th>Type</th>
                        <th>Vaccination</th>
                        <th>Diagnosis</th>
                        <th>Treatment</th>
                        <th>Notes</th>
                        <th>Created On</th>
                        <th>Updated On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                <% records.forEach(r => { %>
                    <tr 
                    data-pet-id="<%= r.pet_id %>"
                    data-created="<%= r.createdAt ? r.createdAt.toISOString() : '' %>"
                    data-updated="<%= r.updatedAt ? r.updatedAt.toISOString() : '' %>"
                    >
                        <td><%= r.record_id %></td>
                        <td><%= r.pet_name %></td>
                        <td><%= r.type %></td>
                        <td><%= r.type === 'Vaccination' ? r.vaccination_name || '-' : '-' %></td>
                        <td><%= r.type === 'Check-up' ? r.diagnosis || '-' : '-' %></td>
                        <td><%= r.treatment || '-' %></td>
                        <td><%= r.notes || '-' %></td>
                        <td><%= r.createdAt ? r.createdAt.toLocaleDateString() : "-" %></td>
                        <td><%= r.updatedAt ? r.updatedAt.toLocaleDateString() : "-" %></td>
                        <td>
                            <div class="d-flex gap-1">
                                <a href="/medicalrecords/edit/<%= r._id %>" class="btn btn-edit btn-sm">Edit</a>
                                <button type="button" class="btn btn-delete btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#confirmDeleteModal"
                                    data-id="<%= r._id %>">
                                    Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">Are you sure you want to delete this medical record?</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="POST">
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        window.addEventListener('DOMContentLoaded', () => {

            /* =========================
                INITIAL PET FILTER (from Pets page)
            ========================== */
            let initialPetId = INITIAL_PET_ID?.trim() || ''; // ensure it's a trimmed string

            /* =========================
                MODALS
            ========================== */
            const errorModal = document.getElementById('errorModal');
            if (errorModal) new bootstrap.Modal(errorModal).show();

            const deleteModal = document.getElementById('confirmDeleteModal');
            deleteModal.addEventListener('show.bs.modal', e => {
                const id = e.relatedTarget.getAttribute('data-id');
                document.getElementById('deleteForm').action = `/medicalrecords/delete/${id}`;
            });

            /* =========================
                ELEMENT REFERENCES
            ========================== */
            const rows = Array.from(document.querySelectorAll('tbody tr'));
            const tbody = rows[0]?.parentNode;

            const globalSearch = document.getElementById('globalSearch');
            const filterType = document.getElementById('filterType');
            const sortDate = document.getElementById('sortDate');

            const createdFrom = document.getElementById('createdFrom');
            const createdTo = document.getElementById('createdTo');
            const updatedFrom = document.getElementById('updatedFrom');
            const updatedTo = document.getElementById('updatedTo');

            const clearFiltersBtn = document.getElementById('clearFiltersBtn');

            /* =========================
                PRESERVE ORIGINAL ROW ORDER
            ========================== */
            rows.forEach((row, index) => row.dataset.originalIndex = index);

            /* =========================
                HELPER FUNCTIONS
            ========================== */
            const inRange = (date, from, to) => {
                if (!date) return true;
                if (from && date < from) return false;
                if (to && date > to) return false;
                return true;
            };

            /* =========================
                FILTERING FUNCTION
            ========================== */
            function applyFilters() {
                const searchQuery = globalSearch.value.toLowerCase().trim();
                const typeFilter = filterType.value.toLowerCase();
                const createdFromDate = createdFrom.value ? new Date(createdFrom.value + 'T00:00:00') : null;
                const createdToDate = createdTo.value ? new Date(createdTo.value + 'T23:59:59') : null;
                const updatedFromDate = updatedFrom.value ? new Date(updatedFrom.value + 'T00:00:00') : null;
                const updatedToDate = updatedTo.value ? new Date(updatedTo.value + 'T23:59:59') : null;

                rows.forEach(row => {
                    let visible = true;

                    const id = row.cells[0].textContent.toLowerCase();
                    const petName = row.cells[1].textContent.toLowerCase();
                    const type = row.cells[2].textContent.toLowerCase();
                    const notesText = row.cells[6].textContent.trim();
                    const notes = notesText === '-' ? '' : notesText.toLowerCase();

                    const createdDate = row.dataset.created ? new Date(row.dataset.created) : null;
                    const updatedDate = row.dataset.updated ? new Date(row.dataset.updated) : null;

                    // Global search
                    if (searchQuery && !(id.includes(searchQuery) || petName.includes(searchQuery) || type.includes(searchQuery) || notes.includes(searchQuery))) {
                        visible = false;
                    }

                    // Type filter
                    if (typeFilter && type !== typeFilter) visible = false;

                    // Created date range
                    if (!inRange(createdDate, createdFromDate, createdToDate)) visible = false;

                    // Updated date range
                    if (!inRange(updatedDate, updatedFromDate, updatedToDate)) visible = false;

                    // Initial pet filter from Pets page
                    if (initialPetId && row.dataset.petId?.trim() !== initialPetId) visible = false;

                    row.style.display = visible ? '' : 'none';
                });
            }

            /* =========================
                SORTING FUNCTION
            ========================== */
            function sortTable() {
                const visibleRows = rows.filter(r => r.style.display !== 'none');

                const sorters = {
                    'created-new': (a, b) => new Date(b.dataset.created) - new Date(a.dataset.created),
                    'created-old': (a, b) => new Date(a.dataset.created) - new Date(b.dataset.created),
                    'updated-new': (a, b) => new Date(b.dataset.updated) - new Date(a.dataset.updated),
                    'updated-old': (a, b) => new Date(a.dataset.updated) - new Date(b.dataset.updated)
                };

                if (sorters[sortDate.value]) {
                    visibleRows.sort(sorters[sortDate.value]);
                } else {
                    visibleRows.sort((a, b) => a.dataset.originalIndex - b.dataset.originalIndex);
                }

                visibleRows.forEach(row => tbody.appendChild(row));
            }

            /* =========================
                UPDATE TABLE
            ========================== */
            function updateTable() {
                applyFilters();
                sortTable();
            }

            /* =========================
                EVENT LISTENERS
            ========================== */
            [globalSearch, filterType, sortDate, createdFrom, createdTo, updatedFrom, updatedTo].forEach(el => {
                el.addEventListener('input', updateTable);
                el.addEventListener('change', updateTable);
            });

            // Clear filters button
            clearFiltersBtn.addEventListener('click', () => {
                globalSearch.value = '';
                filterType.value = '';
                sortDate.value = '';
                createdFrom.value = '';
                createdTo.value = '';
                updatedFrom.value = '';
                updatedTo.value = '';

                // Reset initial pet filter
                initialPetId = '';

                // Remove pet_id from URL
                const url = new URL(window.location);
                url.searchParams.delete('pet_id');
                url.searchParams.delete('pet_name');
                history.replaceState({}, '', url);

                // Show all rows and reset sorting
                rows.forEach(r => r.style.display = '');
                updateTable();
            });

            /* =========================
                CSV EXPORT
            ========================== */
            document.getElementById('exportCsvBtn').addEventListener('click', () => {
                const csv = [];
                rows.forEach(r => {
                    if (r.style.display !== 'none') {
                        csv.push([...r.cells].map(c => `"${c.textContent}"`).join(','));
                    }
                });
                const blob = new Blob([csv.join('\n')], { type: 'text/csv' });
                const a = document.createElement('a');
                a.href = URL.createObjectURL(blob);
                a.download = 'medical_records.csv';
                a.click();
            });

            /* =========================
                PRINT
            ========================== */
            document.getElementById('printBtn').addEventListener('click', () => window.print());

            // Apply filters initially
            updateTable();
        });
    </script>


</body>
</html>
