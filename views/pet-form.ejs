<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= pet ? "Edit Pet" : "Add Pet" %> - Pet Shelter Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>

    <%- include('partials/header') %>

    <div class="container mt-4">
        <h1><%= pet ? "Edit Pet" : "Add New Pet" %></h1>

        <form action="<%= pet ? '/pets/edit/' + pet._id : '/pets/add' %>" method="POST">
            <div class="mb-3">
                <label for="pet_id" class="form-label">Pet ID</label>
                <input type="text" name="pet_id" id="pet_id" class="form-control" required
                    value="<%= pet ? pet.pet_id : nextId %>" <%= pet ? "readonly" : "" %>>
            </div>

            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" name="name" id="name" class="form-control" required
                    value="<%= pet ? pet.name : '' %>">
            </div>

            <div class="mb-3">
                <label for="species" class="form-label">Species</label>
                <select name="species" class="form-control" required>
                    <option value="">Select species</option>
                    <option>Dog</option>
                    <option>Cat</option>
                    <option>Rabbit</option>
                    <option>Bird</option>
                    <option>Hamster</option>
                    <option>Guinea Pig</option>
                    <option>Rat</option>
                    <option>Ferret</option>
                    <option>Snake</option>
                    <option>Lizard</option>
                    <option>Fish</option>
                    <option>Turtle</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="breed" class="form-label">Breed</label>
                <input type="text" name="breed" id="breed" class="form-control"
                    value="<%= pet ? pet.breed : '' %>">
            </div>

            <div class="mb-3">
                <label for="age" class="form-label">Age</label>
                <input type="number" name="age" id="age" class="form-control"
                    value="<%= pet ? pet.age : '' %>">
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" name="available" id="available" class="form-check-input"
                    <%= pet && pet.available ? "checked" : "" %>>
                <label for="available" class="form-check-label">Available for Adoption</label>
            </div>

            <div class="mb-3">
                <label for="microchip" class="form-label">Microchip Number</label>
                <input type="text" name="microchip" id="microchip" class="form-control"
                    value="<%= pet ? pet.microchip : '' %>">
            </div>

            <% if (pet) { %>
                <!-- Edit button triggers modal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmEditModal">
                    Update Pet
                </button>
            <% } else { %>
                <!-- Add button submits directly -->
                <button type="submit" class="btn btn-primary">Add Pet</button>
            <% } %>
            <a href="/pets" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

    <% if (pet) { %>
    <!-- Confirm Edit Modal -->
    <div class="modal fade" id="confirmEditModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title">Confirm Edit</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to save these changes to this pet?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmEditBtn">Yes, Save Changes</button>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const confirmBtn = document.getElementById('confirmEditBtn');
            const form = document.querySelector('form');
            if (confirmBtn && form) {
                confirmBtn.addEventListener('click', () => {
                    form.submit();
                });
            }
        });
    </script>

</body>
</html>