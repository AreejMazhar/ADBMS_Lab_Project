<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reports - Pet Shelter Portal</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <h1>Reports</h1>
        <p class="text-muted">Overview of adoption statistics and analytics.</p>

        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="card text-bg-primary h-100">
                    <div class="card-body">
                        <h5 class="card-title">Total Pets</h5>
                        <p class="card-text display-6"><%= totalPets %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-bg-success h-100">
                    <div class="card-body">
                        <h5 class="card-title">Total Adopters</h5>
                        <p class="card-text display-6"><%= totalAdopters %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-bg-warning h-100">
                    <div class="card-body">
                        <h5 class="card-title">Total Adoptions</h5>
                        <p class="card-text display-6"><%= totalAdoptions %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Adopters -->
        <div class="mb-5">
            <h3>Top Adopters</h3>
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Adopter Name</th>
                        <th>Number of Adoptions</th>
                    </tr>
                </thead>
                <tbody>
                    <% topAdopters.forEach(adopter => { %>
                    <tr>
                        <td><%= adopter.name %></td>
                        <td><span class="badge bg-primary"><%= adopter.count %></span></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Most Adopted Species -->
        <div class="mb-5">
            <h3>Most Adopted Species</h3>
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Species</th>
                        <th>Number of Adoptions</th>
                    </tr>
                </thead>
                <tbody>
                    <% speciesStats.forEach(species => { %>
                    <tr>
                        <td><%= species._id %></td>
                        <td><span class="badge bg-success"><%= species.count %></span></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
