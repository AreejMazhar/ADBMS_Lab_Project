<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= adopter ? "Edit Adopter" : "Add Adopter" %> - Pet Shelter Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <%- include('partials/header') %>

    <div class="container mt-4">
        <h1><%= adopter ? "Edit Adopter" : "Add New Adopter" %></h1>

        <form action="<%= adopter ? '/adopters/edit/' + adopter._id : '/adopters/add' %>" method="POST">
            <div class="mb-3">
                <label for="adopter_id" class="form-label">Adopter ID</label>
                <input type="text" name="adopter_id" id="adopter_id" class="form-control" required
                    value="<%= adopter ? adopter.adopter_id : nextId %>" <%= adopter ? "readonly" : "" %>>
            </div>

            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" name="name" id="name" class="form-control" required
                    value="<%= adopter ? adopter.name : '' %>">
            </div>

            <div class="mb-3">
                <label for="contact" class="form-label">Contact</label>
                <input type="text" name="contact" id="contact" class="form-control"
                    value="<%= adopter ? adopter.contact : '' %>">
            </div>

            <div class="mb-3">
                <label for="adopted_pet_count" class="form-label">Number of Adopted Pets</label>
                <input type="number" name="adopted_pet_count" id="adopted_pet_count" class="form-control"
                    value="<%= adopter ? adopter.adopted_pet_count : 0 %>">
            </div>

            <div class="mb-3">
                <label for="notes" class="form-label">Notes</label>
                <textarea name="notes" id="notes" class="form-control"><%= adopter ? adopter.notes : '' %></textarea>
            </div>

            <% if (adopter) { %>
                <!-- Edit button triggers modal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmEditModal">
                    Update Adopter
                </button>
            <% } else { %>
                <!-- Add button submits directly -->
                <button type="submit" class="btn btn-primary">Add Adopter</button>
            <% } %>

            <a href="/adopters" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

    <% if (adopter) { %>
    <!-- Confirm Edit Modal -->
    <div class="modal fade" id="confirmEditModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title">Confirm Edit</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to save these changes to the adopter?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmEditBtn">Yes, Save Changes</button>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const confirmBtn = document.getElementById('confirmEditBtn');
            const form = document.querySelector('form');
            if (confirmBtn && form) {
                confirmBtn.addEventListener('click', () => {
                    form.submit();
                });
            }
        });
    </script>
</body>
</html>