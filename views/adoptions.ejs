<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Adoptions - Pet Shelter Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <%- include('partials/header') %>

    <% if (error) { %>
    <div class="modal fade" id="errorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Action Blocked</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body"><p><%= error %></p></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <div class="container mt-4">
        <h1 class="mb-3">Adoption Records</h1>

        <!-- Top Buttons -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/adoptions/add" class="btn btn-primary">
                Add Adoption
            </a>
            <div class="d-flex gap-2">
                <button class="btn btn-secondary" id="exportCsvBtn">
                    Export CSV
                </button>
                <button class="btn btn-secondary" id="printBtn">
                    Print
                </button>
            </div>
        </div>

        <!-- Search & Filters -->
        <div class="search-filter-card mb-3 p-3 border rounded bg-white shadow-sm">
            <div class="search-bar">
                <input type="text" id="globalSearch" class="form-control mb-2"
                placeholder="Search by Record ID, Pet, Adopter, Comments...">
            </div>

            <div class="filters-row">
                    <span><strong>Filters:</strong></span>
                    <input type="text" id="filterPet" class="form-control form-control-sm" placeholder="Pet name">
                    <input type="text" id="filterAdopter" class="form-control form-control-sm" placeholder="Adopter name">
                    <div class="date-range-filter">
                        <input type="date" id="filterDateFrom" class="form-control form-control-sm">
                        <span class="date-separator">to</span>
                        <input type="date" id="filterDateTo" class="form-control form-control-sm">
                    </div>
            </div>

            <div class="filters-actions">
                <button id="clearFiltersBtn" class="btn btn-outline-secondary btn-sm">
                    Clear Filters
                </button>
            </div>

        </div>

        <!-- Table -->
        <div class="table-container">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Record ID</th>
                        <th>Pet</th>
                        <th>Adopter</th>
                        <th>Date</th>
                        <th>Comments</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                <% adoptions.forEach(r => { %>
                    <tr>
                        <td><%= r.record_id %></td>
                        <td><%= r.pet_name || "-" %></td>
                        <td><%= r.adopter_name || "-" %></td>
                        <td><%= new Date(r.adoption_date).toLocaleDateString() %></td>
                        <td><%= r.comments || "-" %></td>
                        <td>
                            <div class="d-flex gap-1">
                                <a href="/adoptions/edit/<%= r._id %>" class="btn btn-edit btn-sm">Edit</a>
                                <button type="button"
                                        class="btn btn-delete btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#confirmDeleteModal"
                                        data-id="<%= r._id %>">
                                    Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">Are you sure you want to delete this record?</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="POST">
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
    window.addEventListener('DOMContentLoaded', () => {

        // Error modal
        const errorModal = document.getElementById('errorModal');
        if (errorModal) new bootstrap.Modal(errorModal).show();

        // Delete modal
        const deleteModal = document.getElementById('confirmDeleteModal');
        deleteModal.addEventListener('show.bs.modal', e => {
            const id = e.relatedTarget.getAttribute('data-id');
            document.getElementById('deleteForm').action = `/adoptions/delete/${id}`;
        });

        // Filtering
        const rows = document.querySelectorAll('tbody tr');
        const globalSearch = document.getElementById('globalSearch');
        const filterPet = document.getElementById('filterPet');
        const filterAdopter = document.getElementById('filterAdopter');
        const filterDateFrom = document.getElementById('filterDateFrom');
        const filterDateTo = document.getElementById('filterDateTo');

        function applyFilters() {
            rows.forEach(row => {
                const id = row.cells[0].textContent.toLowerCase();
                const pet = row.cells[1].textContent.toLowerCase();
                const adopter = row.cells[2].textContent.toLowerCase();
                const date = row.cells[3].textContent;
                const comments = row.cells[4].textContent.toLowerCase();

                let visible = true;
                const q = globalSearch.value.toLowerCase();

                visible = visible && (
                    id.includes(q) || pet.includes(q) ||
                    adopter.includes(q) || comments.includes(q)
                );

                if (filterPet.value) visible = visible && pet.includes(filterPet.value.toLowerCase());
                if (filterAdopter.value) visible = visible && adopter.includes(filterAdopter.value.toLowerCase());
                if (filterDateFrom.value || filterDateTo.value) {
                    const rowDate = new Date(row.cells[3].textContent);
                    const fromDate = filterDateFrom.value ? new Date(filterDateFrom.value) : null;
                    const toDate = filterDateTo.value ? new Date(filterDateTo.value) : null;

                    if (fromDate && rowDate < fromDate) visible = false;
                    if (toDate && rowDate > toDate) visible = false;
                }


                row.style.display = visible ? "" : "none";
            });
        }

        [globalSearch, filterPet, filterAdopter, filterDateFrom, filterDateTo].forEach(el => {
            el.addEventListener('input', applyFilters);
            el.addEventListener('change', applyFilters);
        });

        // Export CSV
        document.getElementById('exportCsvBtn').addEventListener('click', () => {
            const csv = [];
            rows.forEach(r => {
                if (r.style.display !== 'none') {
                    csv.push([...r.cells].map(c => `"${c.textContent}"`).join(','));
                }
            });
            const blob = new Blob([csv.join('\n')], { type: 'text/csv' });
            const a = document.createElement('a');
            a.href = URL.createObjectURL(blob);
            a.download = 'adoptions.csv';
            a.click();
        });

        // Print
        document.getElementById('printBtn').addEventListener('click', () => window.print());

        // Clear Filters
        document.getElementById('clearFiltersBtn').addEventListener('click', () => {
            globalSearch.value = '';
            filterPet.value = '';
            filterAdopter.value = '';
            filterDateFrom.value = '';
            filterDateTo.value = '';

            applyFilters(); 
        });
    });
    </script>

</body>
</html>
