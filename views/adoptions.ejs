<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Adoptions - Pet Shelter Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <%- include('partials/header') %>

    <% if (error) { %>
    <div class="modal fade" id="errorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Action Blocked</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body"><p><%= error %></p></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <div class="container mt-4">
        <h1 class="mb-3">Adoption Records</h1>

        <!-- Top Buttons -->
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
            <a href="/adoptions/add" class="btn btn-primary">Add Adoption</a>
            <div class="d-flex gap-2">
                <button class="btn btn-secondary" id="exportCsvBtn">Export CSV</button>
                <button class="btn btn-secondary" id="printBtn">Print</button>
            </div>
        </div>

        <!-- Search & Filters -->
        <div class="search-filter-card mb-3">
            <!-- Global Search -->
            <div class="search-bar mb-2">
                <input type="text" id="globalSearch" class="form-control" placeholder="Search by Record ID, Pet, Adopter, Comments...">
            </div>

            <!-- Filters Row -->
            <div class="filters-row">
                <span><strong>Filters:</strong></span>

                <!-- Comments Filter -->
                <select id="filterComments" class="form-select form-select-sm">
                    <option value="all">All Comments</option>
                    <option value="has">Has Comments</option>
                    <option value="none">No Comments</option>
                </select>

                <!-- Sort by Date -->
                <select id="sortDate" class="form-select form-select-sm">
                    <option value="">Select</option>
                    <option value="newest">Newest to Oldest</option>
                    <option value="oldest">Oldest to Newest</option>
                </select>

                <!-- Date Range -->
                <div class="date-range-filter">
                    <input type="date" id="filterDateFrom" class="form-control form-control-sm">
                    <span class="date-separator">to</span>
                    <input type="date" id="filterDateTo" class="form-control form-control-sm">
                </div>

            </div>

            <!-- Clear Filters Button -->
            <div class="filters-actions">
                <button id="clearFiltersBtn" class="btn btn-outline-secondary btn-sm">Clear Filters</button>
            </div>
        </div>

        <!-- Table -->
        <div class="table-container">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Record ID</th>
                        <th>Pet</th>
                        <th>Adopter</th>
                        <th>Date</th>
                        <th>Comments</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                <% adoptions.forEach(r => { %>
                    <tr data-date="<%= r.adoption_date.toISOString() %>">
                        <td><%= r.record_id %></td>
                        <td><%= r.pet_name || "-" %></td>
                        <td><%= r.adopter_name || "-" %></td>
                        <td><%= new Date(r.adoption_date).toLocaleDateString() %></td>
                        <td><%= r.comments || "-" %></td>
                        <td>
                            <div class="d-flex gap-1">
                                <a href="/adoptions/edit/<%= r._id %>" class="btn btn-edit btn-sm">Edit</a>
                                <button type="button"
                                        class="btn btn-delete btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#confirmDeleteModal"
                                        data-id="<%= r._id %>">
                                    Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">Are you sure you want to delete this record?</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="POST">
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        window.addEventListener('DOMContentLoaded', () => {

            const rows = Array.from(document.querySelectorAll('tbody tr'));
            const tbody = rows[0]?.parentNode;

            const globalSearch = document.getElementById('globalSearch');
            const filterDateFrom = document.getElementById('filterDateFrom');
            const filterDateTo = document.getElementById('filterDateTo');
            const filterComments = document.getElementById('filterComments');
            const sortDate = document.getElementById('sortDate');
            const clearFiltersBtn = document.getElementById('clearFiltersBtn');

            // Store original order
            rows.forEach((row, index) => {
                row.dataset.originalIndex = index;
            });

            function applyFilters() {
                rows.forEach(row => {
                    const id = row.cells[0].textContent.toLowerCase();
                    const pet = row.cells[1].textContent.toLowerCase();
                    const adopter = row.cells[2].textContent.toLowerCase();
                    const commentsText = row.cells[4].textContent.trim();
                    const comments = commentsText === '-' ? '' : commentsText.toLowerCase();
                    const rowDate = new Date(row.dataset.date);

                    let visible = true;

                    // Global search
                    const q = globalSearch.value.toLowerCase();
                    if (q && !(id.includes(q) || pet.includes(q) || adopter.includes(q) || comments.includes(q))) {
                        visible = false;
                    }

                    // Date range
                    if (filterDateFrom.value) {
                        const from = new Date(filterDateFrom.value + 'T00:00:00');
                        if (rowDate < from) visible = false;
                    }

                    if (filterDateTo.value) {
                        const to = new Date(filterDateTo.value + 'T23:59:59');
                        if (rowDate > to) visible = false;
                    }

                    // Comments filter
                    if (filterComments.value === 'has' && !comments) visible = false;
                    if (filterComments.value === 'none' && comments) visible = false;

                    row.style.display = visible ? '' : 'none';
                });
            }

            function sortTable() {
                const visibleRows = rows.filter(r => r.style.display !== 'none');

                if (sortDate.value === 'newest') {
                    visibleRows.sort((a, b) => new Date(b.dataset.date) - new Date(a.dataset.date));
                } else if (sortDate.value === 'oldest') {
                    visibleRows.sort((a, b) => new Date(a.dataset.date) - new Date(b.dataset.date));
                } else {
                    visibleRows.sort((a, b) => a.dataset.originalIndex - b.dataset.originalIndex);
                }

                visibleRows.forEach(r => tbody.appendChild(r));
            }

            function updateTable() {
                applyFilters();
                sortTable();
            }

            [globalSearch, filterDateFrom, filterDateTo, filterComments, sortDate]
                .forEach(el => {
                    el.addEventListener('input', updateTable);
                    el.addEventListener('change', updateTable);
                });

            clearFiltersBtn.addEventListener('click', () => {
                globalSearch.value = '';
                filterDateFrom.value = '';
                filterDateTo.value = '';
                filterComments.value = 'all';
                sortDate.value = '';
                updateTable();
            });

        });
    </script>

</body>
</html>
