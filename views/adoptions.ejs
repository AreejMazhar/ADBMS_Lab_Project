<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Adoptions - Pet Shelter Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="modal fade" id="errorModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-warning">
                            <h5 class="modal-title">Action Blocked</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                    <div class="modal-body">
                        <p><%= error %></p>
                    </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            OK
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

    <div class="container mt-4">
        <h1>Adoption Records</h1>
        <div class="mb-3">
            <a href="/adoptions/add" class="btn btn-success">Add New Adoption</a>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Record ID</th>
                    <th>Pet Name</th>
                    <th>Adopter Name</th>
                    <th>Adoption Date</th>
                    <th>Comments</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% adoptions.forEach(record => { %>
                <tr>
                    <td><%= record.record_id %></td>
                    <td><%= record.pet_name || "-" %></td>
                    <td><%= record.adopter_name || "-" %></td>
                    <td><%= new Date(record.adoption_date).toLocaleDateString() %></td>
                    <td><%= record.comments || "-" %></td>
                    <td>
                        <div class="d-flex gap-1">
                            <a href="/adoptions/edit/<%= record._id %>" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/adoptions/delete/<%= record._id %>" method="POST">
                                <button type="button" class="btn btn-danger btn-sm" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#confirmDeleteModal" 
                                        data-formid="<%= record._id %>">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Delete confirmation modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this adoption record?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Yes, Delete</button>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const modalEl = document.getElementById('errorModal');
            if (modalEl) {
                const errorModal = new bootstrap.Modal(modalEl);
                errorModal.show();
            }
        });
    </script>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const deleteModal = document.getElementById('confirmDeleteModal');
            const confirmBtn = document.getElementById('confirmDeleteBtn');
            let currentForm;

            deleteModal.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget; // Button that triggered the modal
                const formId = button.getAttribute('data-formid');
                currentForm = button.closest('form'); // Grab the correct form
            });

            confirmBtn.addEventListener('click', () => {
                if (currentForm) currentForm.submit();
            });
        });
    </script>

</body>
</html>
