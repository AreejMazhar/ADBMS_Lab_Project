<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Adoptions - Pet Shelter Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <h1>Adoption Records</h1>
        <div class="mb-3">
            <a href="/adoptions/add" class="btn btn-success">Add New Adoption</a>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Record ID</th>
                    <th>Pet Name</th>
                    <th>Adopter Name</th>
                    <th>Adoption Date</th>
                    <th>Comments</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% adoptions.forEach(record => { %>
                <tr>
                    <td><%= record.record_id %></td>
                    <td><%= record.pet_name || "-" %></td>
                    <td><%= record.adopter_name || "-" %></td>
                    <td><%= new Date(record.adoption_date).toLocaleDateString() %></td>
                    <td><%= record.comments || "-" %></td>
                    <td>
                        <a href="/adoptions/edit/<%= record._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/adoptions/delete/<%= record._id %>" method="POST" style="display:inline-block;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
