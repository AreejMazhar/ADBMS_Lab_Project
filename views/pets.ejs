<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Pets - Pet Shelter Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <h1>Pets</h1>
        <div class="mb-3">
            <a href="/pets/add" class="btn btn-success">Add New Pet</a>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Species</th>
                    <th>Breed</th>
                    <th>Age</th>
                    <th>Available</th>
                    <th>Vaccinations</th>
                    <th>Medical Notes</th>
                    <th>Microchip</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% pets.forEach(pet => { %>
                <tr>
                    <td><%= pet.pet_id %></td>
                    <td><%= pet.name %></td>
                    <td><%= pet.species || "-" %></td>
                    <td><%= pet.breed || "-" %></td>
                    <td><%= pet.age != null ? pet.age : "-" %></td>
                    <td><%= pet.available ? "Yes" : "No" %></td>
                    <td><%= pet.vaccinations.length > 0 ? pet.vaccinations.join(', ') : "-" %></td>
                    <td><%= pet.medical_notes || "-" %></td>
                    <td><%= pet.microchip || "-" %></td>
                    <td>
                        <a href="/pets/edit/<%= pet._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/pets/delete/<%= pet._id %>" method="POST" style="display:inline-block;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
