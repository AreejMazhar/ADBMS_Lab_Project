<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Pets - Pet Shelter Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>
        <% if (error) { %>
            <div class="modal fade" id="errorModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title">Action Not Allowed</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                    <div class="modal-body">
                        <p><%= error %></p>
                    </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            OK
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>


    <div class="container mt-4">
        <h1>Pets</h1>
        <div class="mb-3">
            <a href="/pets/add" class="btn btn-success">Add New Pet</a>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Species</th>
                    <th>Breed</th>
                    <th>Age</th>
                    <th>Available</th>
                    <th>Vaccinations</th>
                    <th>Medical Notes</th>
                    <th>Microchip</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% pets.forEach(pet => { %>
                <tr>
                    <td><%= pet.pet_id %></td>
                    <td><%= pet.name %></td>
                    <td><%= pet.species || "-" %></td>
                    <td><%= pet.breed || "-" %></td>
                    <td><%= pet.age != null ? pet.age : "-" %></td>
                    <td><%= pet.available ? "Yes" : "No" %></td>
                    <td><%= pet.vaccinations.length > 0 ? pet.vaccinations.join(', ') : "-" %></td>
                    <td><%= pet.medical_notes || "-" %></td>
                    <td><%= pet.microchip || "-" %></td>
                    <td>
                        <div class="d-flex gap-1">
                            <a href="/pets/edit/<%= pet._id %>" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/pets/delete/<%= pet._id %>" method="POST">
                                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-formid="<%= pet._id %>">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this pet?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Yes, Delete</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const modalEl = document.getElementById('errorModal');
            if (modalEl) {
                const errorModal = new bootstrap.Modal(modalEl);
                errorModal.show();
            }
        });
    </script>

    <script>
    let formToSubmit = null;

    // When modal is opened, store the form reference
    const confirmDeleteModal = document.getElementById('confirmDeleteModal');
    confirmDeleteModal.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        formToSubmit = button.closest('form'); // store the form to submit
    });

    // When Yes is clicked, submit the stored form
    document.getElementById('confirmDeleteBtn').addEventListener('click', () => {
        if (formToSubmit) formToSubmit.submit();
    });
    </script>
</body>
</html>
